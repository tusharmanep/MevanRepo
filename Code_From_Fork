pipeline
{
agent any 
stages
{
 stage('scm checkout')
{ steps {git branch: 'main', url: 'https://github.com/tusharmanep/MevanRepo.git'}}


 stage('code compile')
 {steps { withMaven(globalMavenSettingsConfig: '', jdk: 'Java-Home', maven: 'Maven-Home', mavenSettingsConfig: '', traceability: true)  {
    sh 'mvn compile'
 } }}

  stage('execute unit test framework')
 {steps { withMaven(globalMavenSettingsConfig: '', jdk: 'Java-Home', maven: 'Maven-Home', mavenSettingsConfig: '', traceability: true)  {
    sh 'mvn test'
 } }}

   stage('code build')
 {steps { withMaven(globalMavenSettingsConfig: '', jdk: 'Java-Home', maven: 'Maven-Home', mavenSettingsConfig: '', traceability: true)  {
    sh 'mvn package'
 } }}
stage('deploye tomcat server')
 {steps {sshagent(credentials: ['deploytomcat'])}
          {
	sh 'scp -o StrictHostKeyChecking=no webapp/target/webapp.war ec2-user@172.31.2.139:/usr/share/tomcat/webapps'

} 

                

}
}
